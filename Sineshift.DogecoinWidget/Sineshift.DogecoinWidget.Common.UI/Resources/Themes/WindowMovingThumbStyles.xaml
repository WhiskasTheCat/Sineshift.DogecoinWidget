<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Sineshift.DogecoinWidget.Common.UI">
	<Style TargetType="{x:Type local:WindowMovingThumb}">
		<Setter Property="Background"
				Value="Transparent" />
		<Setter Property="VerticalAlignment"
				Value="Top" />
		<Setter Property="HorizontalAlignment"
				Value="Stretch" />
		<Setter Property="Height"
				Value="32" />
		<Setter Property="Window"
				Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:WindowMovingThumb}">
					<Grid Background="{TemplateBinding Background}"
						  Cursor="SizeAll"
						  HorizontalAlignment="Stretch"
						  VerticalAlignment="Stretch"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>