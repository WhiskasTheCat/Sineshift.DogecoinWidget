<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<SolidColorBrush x:Key="Brush.Background.Primary"
					 Color="#f4efc8" />

	<SolidColorBrush x:Key="Brush.Foreground.Primary"
					 Color="#000000" />

	<SolidColorBrush x:Key="Brush.Dollar"
					 Color="#008000" />

	<SolidColorBrush x:Key="Brush.Bitcoin"
					 Color="#f8a138" />

	<LinearGradientBrush x:Key="Brush.GlassGradient"
						 StartPoint="0.5,0"
						 EndPoint="0.5,1">
		<GradientStop Offset="0"
					  Color="#00FFFFFF" />
		<GradientStop Offset="0.5"
					  Color="#00FFFFFF" />
		<GradientStop Offset="1"
					  Color="#a0FFFFFF" />
	</LinearGradientBrush>

	<LinearGradientBrush x:Key="Brush.GlassBubble"
						 StartPoint="0.5,0"
						 EndPoint="0.5,1">
		<GradientStop Offset="0"
					  Color="#c0FFFFFF" />
		<GradientStop Offset="1"
					  Color="#00FFFFFF" />
	</LinearGradientBrush>
</ResourceDictionary>