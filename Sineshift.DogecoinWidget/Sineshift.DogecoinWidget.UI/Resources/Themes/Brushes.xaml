<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<SolidColorBrush x:Key="Brush.Background.Primary"
					 Color="#f4efc8" />

	<SolidColorBrush x:Key="Brush.Foreground.Primary"
					 Color="#000000" />

	<SolidColorBrush x:Key="Brush.Dollar"
					 Color="#008000" />

	<!-- A bit darker than the actual bitcoin color for better visibility -->
	<SolidColorBrush x:Key="Brush.Bitcoin"
					 Color="#e88108" />

	<SolidColorBrush x:Key="Brush.Volume"
					 Color="#d5b457" />

	<SolidColorBrush x:Key="Brush.Bull"
					 Color="#00a000" />

	<SolidColorBrush x:Key="Brush.Bear"
					 Color="#c00000" />

	<SolidColorBrush x:Key="Brush.Selected.Background"
					 Color="#a17c34" />

	<SolidColorBrush x:Key="Brush.Selected.Foreground"
					 Color="#ffffff" />
	
	<LinearGradientBrush x:Key="Brush.GlassGradient"
						 StartPoint="0.5,0"
						 EndPoint="0.5,1">
		<GradientStop Offset="0"
					  Color="#00FFFFFF" />
		<GradientStop Offset="0.5"
					  Color="#00FFFFFF" />
		<GradientStop Offset="1"
					  Color="#a0FFFFFF" />
	</LinearGradientBrush>

	<LinearGradientBrush x:Key="Brush.GlassBubble"
						 StartPoint="0.5,0"
						 EndPoint="0.5,1">
		<GradientStop Offset="0"
					  Color="#c0FFFFFF" />
		<GradientStop Offset="1"
					  Color="#00FFFFFF" />
	</LinearGradientBrush>
</ResourceDictionary>